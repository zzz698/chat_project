# 复制此文件为 .env，填入实际值
# cp .env.example .env

# Django 密钥（生产环境必须替换为随机字符串）
# 生成命令：python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# 生产环境设为 False
DEBUG=False

# 服务器 IP 或域名，多个用逗号分隔，例如：192.168.1.100,example.com
ALLOWED_HOSTS=your-server-ip

# Redis 地址（docker-compose 中服务名为 redis）
REDIS_URL=redis://redis:6379
